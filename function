    for i in range(L):
        min_edge_cost=cost((incident_edges(T,G)[i]),G)
        cmp_edge_cost=cost((incident_edges(T,G)[i+1]),G)
        min_edge=incident_edges(T,G)[i]
        if min_edge_cost > cmp_edge_cost:
            min_edge=incident_edges(T,G)[i+1]
        if min_edge_cost==cmp_edge_cost:
            for e in G.edge_set():
                e== incident_edges(T,G)[i] and e!=T[0]:
                    
    return min_edge"""

def min_incident_edge(T,G):
    edges = incident_edges(T,G)
    min_edge=incident_edges(T,G)[0]
    min_edge_cost=cost((incident_edges(T,G)[0]),G)
    for e in edges:
        if min_edge_cost > cost(e,G): 
            min_edge = e
    return min_edge
